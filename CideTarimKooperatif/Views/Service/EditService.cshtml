@model Service
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Service" asp-action="EditService" method="post">
    @* <div asp-validation-summary="All"></div> *@
    <input type="hidden" asp-for="ServiceID" />

    <div class="form-group">
        <label asp-for="ServiceTitle">Hizmet Başlığı</label>
        <input asp-for="ServiceTitle" type="text" class="form-control" id="servicetitle">
        <span asp-validation-for="ServiceTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceDescription">Hizmet Açıklaması</label>
        <input asp-for="ServiceDescription" type="text" class="form-control" id="servicedescription">
        <span asp-validation-for="ServiceDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceImage">Hizmet Fotoğrafı</label>
        <input asp-for="ServiceImage" type="text" class="form-control" id="serviceimage">
        <span asp-validation-for="ServiceImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3" style="width: 100%;">Kaydet</button>
</form>