<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Ekip listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="text-center">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-success text-center" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        else
                        {
                            <tr>
                                <th>#</th>
                                <th>Profil Resmi</th>
                                <th>Personel Adı</th>
                                <th>Personel Ünvanı</th>
                                <th>İşlemler</th>
                            </tr>
                        }
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.PersonID</td>
                                <td class="py-1"><img src="~/admin/template/images/faces/face1.jpg" alt="image" /></td>
                                <td>@item.PersonName</td>
                                <td>@item.PersonTitle</td>
                                <td>
                                    <a asp-controller="Team" asp-action="DeleteTeamMember" asp-route-id="@item.PersonID" class="btn btn-rounded btn-block btn-danger">Sil</a>
                                    <a asp-controller="Team" asp-action="EditTeamMember" asp-route-id="@item.PersonID" class="ms-2 btn btn-rounded btn-block btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a asp-controller="Team" asp-action="AddNewTeamMember" class="btn btn-rounded btn-block btn-success mt-3 text-white" style="width:100%;">Yeni Personel Ekle</a>
            </div>
        </div>
    </div>
</div>

