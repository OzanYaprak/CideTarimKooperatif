@model Image
@{
    ViewData["Title"] = "AddNewImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <h4 class="text-center mt-4">Yeni görsel girişi</h4>
        <div class="card-body">
            <form asp-controller="Image" asp-action="AddNewImage" method="post">
                @*<div asp-validation-summary="All"></div>*@

                <div class="form-group">
                    <label asp-for="ImageTitle">Görsel Başlığı</label>
                    <input asp-for="ImageTitle" type="text" class="form-control" id="imagetitle">
                    <span asp-validation-for="ImageTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURl">Görsel Yolu</label>
                    <input asp-for="ImageURl" type="text" class="form-control" id="imageurl">
                    <span asp-validation-for="ImageURl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageDescription">Açıklama</label>
                    <input asp-for="ImageDescription" type="text" class="form-control" id="imagedescription">
                    <span asp-validation-for="ImageDescription" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-rounded btn-primary mt-3 text-white" style="width: 100%;">Kaydet</button>
                <a asp-controller="Image" asp-action="Index" class="btn btn-rounded btn-info mt-3 text-white" style="width: 100%;">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

