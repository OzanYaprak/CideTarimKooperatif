@model Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <h4 class="text-center mt-4">Yeni hizmet girişi</h4>
        <div class="card-body">
            <form asp-controller="Announcement" asp-action="AddAnnouncement" method="post">
                @*<div asp-validation-summary="All"></div>*@

                <div class="form-group">
                    <label asp-for="AnnouncementTitle">Duyuru Başlığı</label>
                    <input asp-for="AnnouncementTitle" type="text" class="form-control" id="servicetitle">
                    <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnnouncementDescription">Hizmet Açıklaması</label>
                    <input asp-for="AnnouncementDescription" type="text" class="form-control" id="servicedescription">
                    <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-rounded btn-primary mt-3 text-white" style="width: 100%;">Kaydet</button>
                <a asp-controller="Service" asp-action="Index" class="btn btn-rounded btn-info mt-3 text-white" style="width: 100%;">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

