@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <tr class="text-center">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-success text-center" role="alert">
                        @ViewBag.Error
                    </div>
                }
                else
                {
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                }
            </tr>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.ImageID</td>
                    <td>@item.ImageTitle</td>
                    <td>@item.ImageDescription</td>
                    <td>
                        <a asp-controller="Image" asp-action="DeleteImage" asp-route-id="@item.ImageID" class="btn btn-rounded btn-block btn-danger">Sil</a>
                        <a asp-controller="Image" asp-action="EditImage" asp-route-id="@item.ImageID" class="ms-2 btn btn-rounded btn-block btn-warning">Güncelle</a>
                    </td>
                </tr>
            }
        </table>
        <a asp-controller="Image" asp-action="AddImage" class="btn btn-rounded btn-block btn-success mt-3" style="width:100%;">Ekle</a>
    </div>
</div>
