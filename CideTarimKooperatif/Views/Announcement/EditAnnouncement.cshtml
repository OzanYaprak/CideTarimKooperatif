@model Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <h4 class="text-center mt-4">Duyuru düzenleme</h4>
        <div class="card-body">

            <form asp-controller="Announcement" asp-action="EditAnnouncement" method="post">
                @* <div asp-validation-summary="All"></div> *@
                <input type="hidden" asp-for="AnnouncementID" />

                <div class="form-group">
                    <label asp-for="AnnouncementTitle">Duyuru Başlığı</label>
                    <input asp-for="AnnouncementTitle" type="text" class="form-control" id="announcementtitle">
                    <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EntryDate">Duyuru Başlığı</label>
                    <input asp-for="EntryDate" type="date" class="form-control" id="entrydate">
                    <span asp-validation-for="EntryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnnouncementDescription">Duyuru Açıklaması</label>
                    <textarea asp-for="AnnouncementDescription" class="form-control" cols="30" rows="5" id="announcementdescription"></textarea>
                    <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3" style="width: 100%;">Kaydet</button>
            </form>
        </div>
    </div>
</div>

